<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.svcba.scoreboard"
      android:versionCode="1"
      android:versionName="0.1">
    <application android:name=".SVCBAApp" android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".ScoreBoard"
                  android:label="@string/app_name"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
			android:name=".ReadyActivity"
		/>
		<activity
			android:name=".NormalActivity"
		/>
		<activity
			android:name=".dialog.ActionRemoveActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.TimeoutActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.ShootPlayerActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.ShootResultActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.ReboundActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.OffCourtPlayerActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.StatActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.AddPlayerActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.RefTimeoutActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.AssistActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity
			android:name=".dialog.StealActivity"
			android:theme="@android:style/Theme.Dialog"
		/>
		<activity 
			android:name="org.achartengine.GraphicalActivity" 
			android:theme="@android:style/Theme.Dialog"
		/>
    </application>
    <uses-sdk android:minSdkVersion="10"/>

</manifest> 